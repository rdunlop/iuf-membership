<%= form_with(model: member, local: true) do |f| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(member.errors.count, "error") %> prohibited
        this member from being saved:
      </h2>
      <ul>
        <% member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :birthdate %>
    <%= f.date_field :birthdate %>
  </p>
  <div>
    <b>Note: </b>Name and birthdate have to match this system and the registration site.
    <br>
    If you go by a different name
    <a href="#" class="js--altname">click here</a> to enter your other name. (which will also be checked when confirming IUF membership)
  </div>

  <div class="js--altname_target is--hidden">
    <p>
      <%= f.label :alternate_first_name %>
      <%= f.text_field :alternate_first_name %>
    </p>

    <p>
      <%= f.label :alternate_last_name %>
      <%= f.text_field :alternate_last_name %>
    </p>
  </div>

  <p>
    <%= f.label :contact_email %>
    <%= f.email_field :contact_email %>
  </p>

  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>
<% end %>
